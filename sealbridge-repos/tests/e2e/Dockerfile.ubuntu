# tests/e2e/Dockerfile.ubuntu: Docker image for end-to-end tests.
# This Dockerfile sets up an Ubuntu environment with all the necessary
# dependencies to run the E2E test suite. This includes git, git-crypt, gpg,
# and the correct version of Python.

FROM ubuntu:22.04

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    git-crypt \
    gnupg \
    python3.11 \
    python3-pip \
    curl \
    --no-install-recommends && \
    rm -rf /var/lib/apt/lists/*

# Create a non-root user for tests
RUN useradd -ms /bin/bash testuser
USER testuser
WORKDIR /home/testuser

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/home/testuser/.cargo/bin:${PATH}"

# Copy the application code into the container
COPY --chown=testuser:testuser . /app
WORKDIR /app

# Install Python dependencies
RUN uv venv && \
    . .venv/bin/activate && \
    uv pip install -e ".[dev]"

# Set the entrypoint to run tests
ENTRYPOINT ["/bin/bash", "-c", ". .venv/bin/activate && pytest tests/e2e/"]
